@model FRTools.Common.ServersViewModel

@{
    ViewBag.Title = "Discord servers";

}

@section head {
    <link href="https://fonts.googleapis.com/css?family=Arimo" rel="stylesheet">
}

<div class="card mt-3">
    <div class="card-header">
        <h5>Manage bot</h5>
    </div>
    <div class="card-body">
        <p>Below are servers that you share with the bot, you can only manage the bot for servers you are in and have a role with Administrator permissions or are the owner.</p>
        <div class="row">
            @foreach (var server in Model.Servers)
            {
                var manageUrl = Url.RouteUrl("DiscordManageServer", new { discordServer = server.ServerId });
                <div class="col-sm-6 server">
                    <div class="card mt-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-auto">
                                    <a href="@manageUrl">
                                        <div class="serverIcon">
                                            @if (string.IsNullOrEmpty(server.IconHash))
                                            {
                                                <span>@server.ServerName[0]</span>
                                            }
                                            else
                                            {
                                                <img src="@($"https://cdn.discordapp.com/icons/{server.ServerId}/{server.IconHash}.png")" />
                                            }
                                        </div>
                                    </a>
                                </div>
                                <div class="col">
                                    <a href="@manageUrl">
                                        <h4 style="margin-bottom:15px">@server.ServerName</h4>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .serverIcon {
        border-radius: 64px;
        transition: all 0.25s cubic-bezier(0.29,-0.07, 0.56, 1.65);
        overflow: hidden;
        width: 128px;
        height: 128px;
        text-align: center;
        background-color: #2f3136;
        float: left;
        display: inline block;
        color: white;
    }

        .serverIcon img {
            width: 128px;
            height: 128px;
        }

        .serverIcon span {
            display: block;
            font-size: 46px;
            margin-top: 30px;
            font-family: 'Arimo', sans-serif;
        }
</style>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.server').on('mouseover', function () {
                $('.serverIcon', this).css('border-radius', 35);
            }).on('mouseout', function () {
                $('.serverIcon', this).css('border-radius', 64);
            });
        });
    </script>
}
